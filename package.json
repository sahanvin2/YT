{
  "name": "movia-video-platform",
  "version": "1.0.0",
  "description": "A full-featured video hosting platform like YouTube",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "hls-worker": "node backend/hlsWorker.js",
    "worker": "node backend/hlsWorker.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"wait-on http://localhost:5000/api/health && npm run client\"",
    "dev-with-worker": "concurrently \"npm run server\" \"npm run hls-worker\" \"wait-on http://localhost:5000/api/health && npm run client\"",
    "start:all": "concurrently \"npm run server\" \"npm run hls-worker\" \"wait-on http://localhost:5000/api/health && npm run client\"",
    "build": "npm install && cd client && npm install && npm run build",
    "db:check": "node scripts/check_db.js",
    "user:reset": "node scripts/reset_password.js",
    "cleanup": "node scripts/cleanup_tmp.js",
    "email:test": "node test-email.js",
    "email:send": "node send-verification-emails.js",
    "videos:fix": "node fix-orphaned-videos.js",
    "cleanup:temp": "node cleanup-temp-files.js",
    "status": "node check-system-status.js",
    "queue:clear": "node clear-redis-queue.js"
  },
  "keywords": [
    "video",
    "streaming",
    "mern",
    "youtube-clone"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.937.0",
    "@aws-sdk/lib-storage": "^3.598.0",
    "@aws-sdk/s3-request-presigner": "^3.937.0",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.66.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "ffmpeg-static": "^5.3.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^2.1.35",
    "mongodb": "^7.0.0",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.12",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-microsoft": "^2.1.0",
    "socket.io": "^4.8.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1",
    "wait-on": "^7.2.0"
  }
}
