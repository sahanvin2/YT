.profile-edit-page {
  min-height: 100vh;
  background: var(--void);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.profile-edit-modal {
  width: 100%;
  max-width: 600px;
  background: var(--voidLight);
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
  border: 1px solid var(--glassBorder);
}

/* Header */
.profile-edit-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 20px;
  border-bottom: 1px solid var(--glassBorder);
  background: var(--void);
}

.header-left {
  display: flex;
  align-items: center;
  gap: 24px;
}

.close-btn {
  background: none;
  border: none;
  color: var(--hologram);
  cursor: pointer;
  padding: 8px;
  border-radius: 50%;
  transition: all 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-btn:hover {
  background: rgba(255, 255, 255, 0.1);
}

.profile-edit-header h1 {
  font-size: 20px;
  font-weight: 700;
  color: var(--hologram);
  margin: 0;
}

.save-button {
  padding: 8px 20px;
  background: var(--acid);
  color: #FFFFFF;
  border: none;
  border-radius: 20px;
  font-size: 15px;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.2s;
}

.save-button:hover:not(:disabled) {
  background: #FF8555;
  transform: scale(1.02);
}

.save-button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* Banner Section */
.banner-section {
  position: relative;
  height: 200px;
  background: linear-gradient(135deg, #1A1F2E 0%, #242B3D 100%);
  border-bottom: 1px solid var(--glassBorder);
}

.banner-overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  gap: 16px;
}

.banner-btn {
  background: rgba(15, 20, 25, 0.75);
  backdrop-filter: blur(12px);
  border: none;
  color: #FFFFFF;
  padding: 12px;
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.banner-btn:hover {
  background: rgba(15, 20, 25, 0.9);
  transform: scale(1.05);
}

/* Avatar Section */
.avatar-section {
  position: relative;
  padding: 0 20px;
  margin-top: -80px;
  margin-bottom: 16px;
}

.avatar-wrapper {
  position: relative;
  width: 140px;
  height: 140px;
}

.avatar-circle {
  width: 140px;
  height: 140px;
  border-radius: 50%;
  background: linear-gradient(135deg, #FF6B35 0%, #6C5CE7 100%);
  border: 4px solid var(--voidLight);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  position: relative;
}

.avatar-circle img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.avatar-icon {
  font-size: 60px;
  color: #FFFFFF;
}

.avatar-overlay-btn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(15, 20, 25, 0.75);
  backdrop-filter: blur(12px);
  border: none;
  color: #FFFFFF;
  padding: 12px;
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.2s;
  opacity: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-wrapper:hover .avatar-overlay-btn {
  opacity: 1;
}

.avatar-overlay-btn:hover {
  background: rgba(15, 20, 25, 0.9);
  transform: translate(-50%, -50%) scale(1.1);
}

/* Form Section */
.profile-edit-form {
  padding: 20px;
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.form-group label {
  font-size: 13px;
  font-weight: 500;
  color: var(--text-secondary);
  padding-left: 4px;
}

.input-wrapper {
  position: relative;
}

.form-group input,
.form-group textarea {
  width: 100%;
  padding: 12px 16px;
  background: transparent;
  border: 1px solid var(--glassBorder);
  border-radius: 8px;
  color: var(--hologram);
  font-size: 15px;
  font-family: inherit;
  transition: all 0.2s;
}

.form-group input:focus,
.form-group textarea:focus {
  outline: none;
  border-color: var(--acid);
  box-shadow: 0 0 0 2px rgba(255, 107, 53, 0.1);
}

.form-group textarea {
  resize: vertical;
  min-height: 80px;
}

.char-count {
  font-size: 12px;
  color: var(--text-secondary);
  text-align: right;
  margin-top: 4px;
}

.input-icon {
  position: absolute;
  right: 12px;
  top: 50%;
  transform: translateY(-50%);
  color: var(--text-secondary);
}

/* Messages */
.error-message {
  padding: 12px 16px;
  background: rgba(255, 71, 87, 0.1);
  border: 1px solid rgba(255, 71, 87, 0.3);
  border-radius: 8px;
  color: #FF4757;
  font-size: 14px;
  display: flex;
  align-items: center;
  gap: 8px;
}

.success-message {
  padding: 12px 16px;
  background: rgba(70, 211, 105, 0.1);
  border: 1px solid rgba(70, 211, 105, 0.3);
  border-radius: 8px;
  color: #46D369;
  font-size: 14px;
  display: flex;
  align-items: center;
  gap: 8px;
}

/* Responsive */
@media (max-width: 768px) {
  .profile-edit-page {
    padding: 0;
    align-items: flex-start;
  }

  .profile-edit-modal {
    border-radius: 0;
    min-height: 100vh;
  }

  .banner-section {
    height: 160px;
  }

  .avatar-section {
    margin-top: -60px;
  }

  .avatar-wrapper {
    width: 120px;
    height: 120px;
  }

  .avatar-circle {
    width: 120px;
    height: 120px;
  }

  .profile-edit-header h1 {
    font-size: 18px;
  }
}
